block('form-field').mod('message', 'text')(
    mix()({ mods : { 'has-validation' : true } }),

    content()(function() {
        var ctx = this.ctx;

        return [
            applyNext(),
            {
                block : 'message',
                mods : { type : 'text', theme : ctx.mods.theme },
                mix : { block : ctx.block, elem : 'message' }
            }
        ];
    })
);
