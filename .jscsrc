{
    "plugins": ["jscs-bem"],
    "preset": "bem",

    "excludeFiles": [
        ".enb/make.js",
        ".enb/tmp/**",
        ".git/**",
        "*.docs/**",
        "*.examples/**",
        "*.specs/**",
        "*.tmpl-specs/**",
        "*.tests/**",
        "*.bundles/*/!(*.bemjson.js)",
        "**/*.i18n/**",
        "libs/**",
        ".libs-cache/**",
        ".libs-registry/**",
        ".libs-tmp/**",
        ".jshint*",
        "node_modules/**"
    ],
    "fileExtensions": [".js", ".bemtree", ".bemhtml"]
}
